#!/bin/sh

set -e

STATE="$1"
FILES="$2"

tmp_backup_dir="$FILES"/tmp/backup
dest_dir_file="$FILES"/files/dest_dir
filename_file="$FILES"/files/filename
permissions_file="$FILES"/files/permissions

# État initial du montage (1=RO, 0=RW)
initial_mount_ro=1
was_rw_initially=0

safe_copy() {
    if [ $# -gt 2 ]; then
        echo "safe_copy can only handle one file copy at a time" >&2
        exit 2
    fi
    cp -a "$1" "$2".tmp || return $?
    sync "$2".tmp || return $?
    mv "$2".tmp "$2" || return $?
    sync "$(dirname "$2")" || return $?
}

check_and_remount_rw() {
    # Vérifier si déjà en RW
    if mount | grep -q " / .*rw,"; then
        was_rw_initially=1
        echo "Already mounted read-write, keeping RW"
    else
        echo "Remounting / as read-write"
        mount -o remount,rw /
    fi
}

remount_ro_if_needed() {
    # Ne remettre en RO que si c'était initialement en RO
    if [ $was_rw_initially -eq 0 ]; then
        echo "Remounting / as read-only (was RO initially)"
        mount -o remount,ro /
    else
        echo "Keeping read-write (was RW initially)"
    fi
}

case "$STATE" in
    NeedsArtifactReboot)
        echo "No"
        ;;

    SupportsRollback)
        echo "Yes"
        ;;

    ArtifactInstall)
        dest_dir=$(cat "${dest_dir_file}")
        filename=$(cat "${filename_file}")
        test -z "$dest_dir" -o -z "$filename" && \
            echo "Fatal error: dest_dir or filename are undefined." >&2 && exit 1

        # Vérifier/remonter en RW si nécessaire
        check_and_remount_rw

        mkdir -p "${dest_dir}"
        mkdir -p "${tmp_backup_dir}"

        if test -f "${dest_dir}/${filename}"; then
            if ! safe_copy "${dest_dir}/${filename}" "${tmp_backup_dir}/${filename}"; then
                ret=$?
                rm -rf "${tmp_backup_dir}"
                remount_ro_if_needed
                exit $ret
            fi
        fi

        if test -f "${permissions_file}"; then
            mode=$(cat "${permissions_file}")
            chmod "${mode}" "$FILES"/files/"${filename}"
        fi

        safe_copy "$FILES"/files/"${filename}" "${dest_dir}/${filename}"

        # Remettre en RO seulement si nécessaire
        remount_ro_if_needed
        ;;

    ArtifactRollback)
        filename=$(cat "${filename_file}")
        dest_dir=$(cat "${dest_dir_file}")
        test -f "${tmp_backup_dir}/${filename}" || exit 0
        test -z "$dest_dir" -o -z "$filename" && \
            echo "Fatal error: dest_dir or filename are undefined." && exit 1

        check_and_remount_rw
        safe_copy "${tmp_backup_dir}/${filename}" "${dest_dir}/${filename}"
        remount_ro_if_needed
        ;;
esac

exit 0
